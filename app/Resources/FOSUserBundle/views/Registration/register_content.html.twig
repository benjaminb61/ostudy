{% trans_default_domain 'FOSUserBundle' %}

<div class="well">
	{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-horizontal'}}) }}
		
		<div class="form-group">  
			<label class="col-lg-2 control-label" for="email">{{ 'form.email'|trans }}</label>
			<div class="col-lg-10">
				{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder' : 'form.email'|trans}}) }}
			</div>
		</div>
		
		<div class="form-group">  
			<label class="col-lg-2 control-label" for="username">{{ 'form.username'|trans }}</label>
			<div class="col-lg-10">
				{{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder' : 'form.username'|trans}}) }}
			</div>
		</div>
		
		<div class="form-group">  
			<label class="col-lg-2 control-label" for="password">{{ 'form.password'|trans }}</label>
			<div class="col-lg-10">
				{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder' : 'form.password'|trans, 'type' : 'password'}}) }}
			</div>
		</div>
		
		<div class="form-group">  
			<label class="col-lg-2 control-label" for="password_confirmation">{{ 'form.password_confirmation'|trans }}</label>
			<div class="col-lg-10">
				{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder' : 'form.password_confirmation'|trans, 'type' : 'password'}}) }}
			</div>
		</div>
		{{ form_widget(form) }}
		<div class="form-group">
			<div class="col-lg-10 col-lg-offset-2">
				<input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary" />
			</div>
		</div>
	{{ form_end(form) }}
</div>
