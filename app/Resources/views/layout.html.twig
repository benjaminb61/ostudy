<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% if title is defined %} {{ title }} - {% endif %}{{ app_name }}</title>
		<link href="https://bootswatch.com/united/bootstrap.min.css" rel="stylesheet">
		<link href="{{ asset('bundles/App/css/landing-page.css') }}" rel="stylesheet">
		<link href="{{ asset('bundles/App/css/default.css') }}" rel="stylesheet">
		<script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
		<script src="{{ asset('bundles/App/js/bootstrap.min.js') }}"></script>
		<link rel="stylesheet" href="{{ asset('bundles/App/js/tagsinput/dist/bootstrap-tagsinput.css') }}">
		
		<script src="{{ asset('bundles/App/ckeditor/ckeditor.js') }}"></script>
		<script src="{{ asset('bundles/App/js/app.js') }}"></script>
		<script src="{{ asset('bundles/App/js/tagsinput/dist/bootstrap-tagsinput.min.js') }}"></script>
		<script src="{{ asset('bundles/App/js/tagsinput/dist/bootstrap-tagsinput-angular.min.js') }}"></script>
		
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
		<div class="navbar-wrapper">
			<div class="navbar navbar-default">
			  <div class="container">
				<div class="navbar-header">
					<a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					  <span class="icon-bar"></span>
					  <span class="icon-bar"></span>
					  <span class="icon-bar"></span>
					</a>
					<a class="navbar-brand" href="{{ path('homepage') }}">{{ app_name }}</a>
				</div>
				<div class="navbar-collapse collapse">
				  <ul class="nav navbar-nav">
					<li><a href="#">Comment ça marche ?</a></li>
					<!-- <li><a href="">Offres d'emploi</a></li> -->
					<li><a href="">Etudiant</a></li>
					<li><a href="http://www.bootply.com" target="ext">Professeur</a></li>
					<li><a href="#contact">Entreprise</a></li>
					<!-- <li class="dropdown">
					  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
					  <ul class="dropdown-menu">
						<li><a href="#">Action</a></li>
						<li><a href="#">Another action</a></li>
						<li><a href="#">Something else here</a></li>
						<li class="divider"></li>
						<li><a href="#">Separated link</a></li>
						<li><a href="#">One more separated link</a></li>
					  </ul>
					</li> -->
				  </ul>
				  <ul class="nav navbar-nav navbar-right">
				  {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
				    <li class="dropdown">
					<a href="#" class="dropdown-toggle pull-right" data-toggle="dropdown">{{ app.user.username }} {% if app.user.isPremium is defined and app.user.isPremium %}<span id="notify-premium" class="glyphicon glyphicon-star"></span>{% endif %}</a>
						<ul class="dropdown-menu">
							<li><a href="{{ path('fos_user_profile_show') }}" title="Voir mon profil"><span class="glyphicon glyphicon-user glyphicon-menu" style="color:#aea79f;"></span> Voir mon profil</a></li>
							<li><a href="{{ path('premium') }}" title="Voir mon profil"><span class="glyphicon glyphicon-star glyphicon-menu" style="color:#aea79f;"></span> Premium</a></li>
							<li class="divider"></li>
							<li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-off"></span> Déconnexion</a></li>
						 </ul>
					</li>
				    <li class="dropdown notify">
						{{ render(controller("AppBundle:Event:view")) }}
					</li>
				    <li class="dropdown notify">
						<a href="#" class="dropdown-toggle pull-right notify-dropdown" data-toggle="dropdown"><span class="glyphicon glyphicon-align-justify notify-glyphicon"></span>
							<span id="notify-groupe" class="badge notify-count"></span>
						</a> 
						{{ render(controller("AppBundle:Groupe:nav")) }} 
					</li>
		          {% else %}
					<li><a href="{{ path('fos_user_security_login') }}"><span class="glyphicon glyphicon-user"></span> Mon espace</a></li>
					<!-- <li><a href="{{ path('fos_user_registration_register') }}">Inscription</a></li> -->
				  {% endif %}
				  </ul>
				</div>

			</div>
		  </div><!-- /container -->
		</div><!-- /navbar wrapper -->
			{% block body %}{% endblock %}
			{% include 'footer.html.twig' %}
			{% block javascripts %}{% endblock %}
    </body>
</html>
