<table class="table table-striped table-hover ">
	<thead>
		<tr>
			<td colspan="3">Membre</td>
			<td>Inscription</td>
			<td>Dernière visite</td>
			<td></td>
		</tr>

	</thead>
	<tbody>
		{% set i = 0 %}
		{% if listMembers %}	
			{% for usergroupe in listMembers %}
				{% set i = i + 1 %}
				<tr>
					<td>{{ i }}</td>
					<td><img style="max-width:32px;" class="media-object" src="http://www.sites.encode.com.br/src/Frontend/Files/backend_users/avatars/64x64/no-avatar.gif" alt="..."></td>
					<td>{{ usergroupe.user.username }}</td>
					<td>{{ usergroupe.dateJoin|date('d/m/Y') }}</td>
					<td>{{ usergroupe.lastVisit|date('d/m/Y') }}</td>
					<td>
						<a href="" class="btn btn-default btn-sm" title="Envoyer un message privé"><span class="glyphicon glyphicon-envelope"></span></a>
					</td>
				</tr>
			{% endfor %}
		{% endif %}

	</tbody>
</table>