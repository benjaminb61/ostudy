{# Resources/views/account/groupe/form-groupe.html.twig #}
	{{ form_start(form, {'attr': {'method' : 'post', 'action' : path('groupe-add')}}) }}

	<div class="modal-body">
		{# Les erreurs générales du formulaire. #}
		{{ form_errors(form) }}
		
		<div class="form-group">
		  {# Génération du label. #}
		  {{ form_label(form.name, "Nom du groupe", {'label_attr': {'class': 'control-label'}}) }}

		  {# Affichage des erreurs pour ce champ précis. #}
		  {{ form_errors(form.name) }}

		  <div>
			{# Génération de l'input. #}
			{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		  </div>
		</div>
		
		<div class="form-group">
		  {# Génération du label. #}
		  {{ form_label(form.description, "Description du groupe", {'label_attr': {'class': 'control-label'}}) }}

		  {# Affichage des erreurs pour ce champ précis. #}
		  {{ form_errors(form.description) }}

		  <div>
			{# Génération de l'input. #}
			{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
		  </div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
		{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
	</div>

  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
