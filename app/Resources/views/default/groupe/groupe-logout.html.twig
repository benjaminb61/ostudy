{% extends 'default/groupe/layout.html.twig' %}

{% block title %}
{% endblock %}

{% block breadcrumb %}
	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}" title="Home">Mon oStudy</a></li>
		<li><a href="{{ path('groupe', {'groupe_slug' : groupe.slug}) }}" title="Home">{{ groupe.name }}</a></li>
		<li class="active">Désinscription d'un groupe</li>
	</ol>

{% endblock %}

{% block content_account %}

<h3>Désinscription d'un groupe</h3>

	<div class="alert alert-danger" role="alert"><strong>Attention !</strong> Etes vous certain de vouloir vous désinscrire du groupe <strong>{{groupe.name}}</strong> ? Vous ne recevrez plus les mises à jour et n'aurez plus accès aux publications.</div>

  <form action="{{ path('groupe-logout', {'groupe_slug': groupe.slug}) }}" method="post">
    <a href="{{ path('groupe', {'groupe_slug' : groupe.slug}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      {{ groupe.name }}
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Désinscription" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
	 {{ form_rest(form) }}
  </form>

{% endblock %}